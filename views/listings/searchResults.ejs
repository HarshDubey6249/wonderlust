<% layout("/layouts/boilerplate") %>

<style>
/* üåê Search Page Styling */
.search-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 3rem;
  padding: 1rem;
}

.search-heading {
  font-size: 2rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 1rem;
  text-align: center;
}

.search-input-container {
  display: flex;
  justify-content: center;
  width: 100%;
  max-width: 600px;
  margin-bottom: 2rem;
}

.search-input-container input {
  flex: 1;
  padding: 0.7rem 1rem;
  border: 1px solid #ccc;
  border-radius: 25px 0 0 25px;
  outline: none;
  font-size: 1rem;
}

.search-input-container button {
  background-color: #ff385c;
  color: #fff;
  border: none;
  padding: 0 1.5rem;
  border-radius: 0 25px 25px 0;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.search-input-container button:hover {
  background-color: #e91e63;
}

.results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}

.result-card {
  border: none;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  text-decoration: none;
  color: inherit;
}

.result-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.15);
}

.result-card img {
  width: 100%;
  height: 220px;
  object-fit: cover;
}

.result-body {
  padding: 1rem;
}

.result-body h5 {
  font-weight: 600;
  margin-bottom: 0.3rem;
  font-size: 1.1rem;
}

.result-body p {
  color: #555;
  font-size: 0.95rem;
  margin-bottom: 0.5rem;
}

.no-results {
  text-align: center;
  color: #777;
  font-size: 1.1rem;
  margin-top: 2rem;
}

.back-btn {
  display: inline-block;
  margin-top: 2rem;
  background-color: #ff385c;
  color: #fff;
  text-decoration: none;
  padding: 0.6rem 1.2rem;
  border-radius: 30px;
  font-weight: 500;
  transition: background-color 0.3s ease;
}

.back-btn:hover {
  background-color: #e91e63;
}
</style>

<div class="search-container">
  <h2 class="search-heading">Search Results for "<%= search %>"</h2>

  
  <% if (searchResults.length > 0) { %>
    <div class="results-grid">
      <% searchResults.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="result-card">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" />
          <div class="result-body">
            <h5><%= listing.title %></h5>
            <p><%= listing.location %>, <%= listing.country %></p>
            <p>‚Çπ<%= listing.price %>/night</p>
          </div>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-results">No listings found for "<%= search %>" üòî</p>
  <% } %>

  <a href="/listings" class="back-btn">‚Üê Back to All Listings</a>
</div>
